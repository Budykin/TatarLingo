<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:TatarLingo.ViewModels"
             x:Class="TatarLingo.Views.ImageChoiceTaskView"
             x:DataType="vm:ImageChoiceTaskViewModel"
             Background="#FCFCFC">
    
    <UserControl.Styles>
        <Style Selector="Button.Finish">
            <Setter Property="Width" Value="120"/> 
            <Setter Property="Height" Value="32"/> 
            <Setter Property="Background" Value="#009035"/> 
            <Setter Property="CornerRadius" Value="15"/> 
            <Setter Property="Foreground" Value="White"/> 
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
        <Style Selector="Button.Finish:disabled">
            <Setter Property="Background" Value="#A0A0A0"/>
        </Style>
        <Style Selector="Button.Back">
            <Setter Property="Background" Value="Transparent"/> 
            <Setter Property="CornerRadius" Value="15"/> 
            <Setter Property="Foreground" Value="White"/> 
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
        <Style Selector="TextBlock.ModuleTitle">
            <Setter Property="FontSize" Value="20"/> 
            <Setter Property="FontWeight" Value="Bold"/> 
            <Setter Property="HorizontalAlignment" Value="Center"/> 
            <Setter Property="Margin" Value="0,20,0,10"/>
        </Style>

        <Style Selector="ComboBox.task-combo">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#DCDCDC"/> </Style>
        
        <Style Selector="ComboBox.task-combo.matched">
            <Setter Property="Background" Value="#E6F7E9"/>
            <Setter Property="BorderBrush" Value="#28A745"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
        
        <Style Selector="ComboBox.task-combo.invalid">
            <Setter Property="Background" Value="#F8D7DA"/>
            <Setter Property="BorderBrush" Value="#DC3545"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
        
    </UserControl.Styles>

    <DockPanel LastChildFill="True">
        <Grid DockPanel.Dock="Top" Margin="10">
            <Grid.ColumnDefinitions> <ColumnDefinition Width="Auto"/> 
                <ColumnDefinition Width="*"/> 
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                 <RowDefinition Height="Auto"/> 
                 <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Button Classes="Back" 
                    Command="{Binding NavigateBackCommand}" 
                    Width="40" Padding="10,5" VerticalAlignment="Center">
                <Image Source="avares://TatarLingo/Assets/LearningSwitchIcons/ArrowBack.png" Width="20" Height="20"/>
            </Button>
            <TextBlock Grid.Column="1" HorizontalAlignment="Center" 
                       Text="{Binding ModuleTitle}" 
                       VerticalAlignment="Center" Classes="ModuleTitle" Margin="0,0,40,0"/>
            <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                       HorizontalAlignment="Left" Text="ðŸ–¼ï¸ Ð’Ñ‹Ð±ÐµÑ€Ð¸Ñ‚Ðµ Ð¿Ñ€Ð°Ð²Ð¸Ð»ÑŒÐ½Ð¾Ðµ ÑÐ»Ð¾Ð²Ð¾" 
                       FontWeight="Normal" FontSize="16" Margin="20,10"/>
        </Grid>

        <Button Classes="Finish" Content="{Binding ButtonText}" 
                IsEnabled="{Binding IsCompleted}" 
                Command="{Binding FinishExerciseCommand}" 
                DockPanel.Dock="Bottom" HorizontalAlignment="Right" Margin="0,0,20,10"/>

        <ScrollViewer HorizontalScrollBarVisibility="Disabled">
            <ItemsControl ItemsSource="{Binding Items}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel HorizontalAlignment="Center" Orientation="Horizontal" 
                                   ItemWidth="260" ItemHeight="290"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8"
                                Padding="10" Margin="10">
                            <StackPanel Spacing="10">
                                <Image Stretch="Uniform"
                                       Height="180"
                                       Source="{Binding ImagePath}" HorizontalAlignment="Center"/>
                                <ComboBox ItemsSource="{Binding Options}"
                                          SelectedItem="{Binding SelectedWord, Mode=TwoWay}"
                                          Classes="task-combo"
                                          Classes.matched="{Binding IsMatched}"
                                          Classes.invalid="{Binding IsInvalidMatch}"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </DockPanel>
</UserControl>